[Unit]
Description=Ollama Server
After=network.target

[Service]
WorkingDirectory=/home/ubuntu/OllamaProject
ExecStart=/home/ubuntu/OllamaProject/.venv/bin/python3 -m main
Environment="PYTHONUNBUFFERED=1"
Restart=on-failure
User=ubuntu
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
